{
  "name": "widget",
  "version": "0.1.0",
  "description": "Just Comments widget",
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist/* && webpack-cli -p --config webpack.config.js --env.production",
    "watch": "webpack-cli --watch --config webpack.config.js --env.development --locale=en",
    "start": "concurrently \"bls start\" \"npm run watch\"",
    "prettier": "prettier --write 'src/**/*.js'"
  },
  "keywords": [
    "comments",
    "ui",
    "widget"
  ],
  "author": "Oleksii Rudenko <alexei.rudenko@gmail.com>",
  "license": "GPL-3.0",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "arrowParens": "always"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/plugin-syntax-object-rest-spread": "7.2.0",
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@babel/polyfill": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.7.1",
    "babel-loader": "8.0.5",
    "buildless": "0.0.10",
    "buildless-ejs-transform": "0.0.3",
    "concurrently": "4.1.0",
    "css-loader": "2.1.1",
    "husky": "2.0.0",
    "i18n-webpack-plugin": "1.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.7.1",
    "jsonwebtoken": "8.5.1",
    "preact-render-spy": "1.3.0",
    "prettier": "1.17.0",
    "pretty-quick": "1.11.1",
    "style-loader": "0.23.1",
    "webpack": "4.30.0",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.1"
  },
  "dependencies": {
    "js-base64": "2.5.1",
    "jwt-decode": "2.2.0",
    "preact": "8.4.2",
    "scrollparent": "2.0.1",
    "timeago.js": "3.0.2"
  }
}
